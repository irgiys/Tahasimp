<resources >
    <!-- Base application theme. -->
    <style name="Theme.Tahasimp" parent="Theme.Material3.DayNight">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_300</item>
        <item name="colorOnPrimary">@color/grey_700</item>
        <item name="colorPrimaryVariant">@color/grey_800</item>
        <item name="colorPrimarySurface">@color/grey_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Accent color. -->
        <item name="colorAccent">@color/red_300</item>
        <!--        Bottom nav -->
        <item name="colorSurface">@color/grey_700</item>
        <item name="colorOnSurface">?attr/colorOnSurfaceVariant</item>
        <item name="colorSecondaryContainer">@color/red_200</item>
        <item name="colorOnSecondaryContainer">@color/grey_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/grey_800</item>
    </style>
</resources>